{# app/Resources/views/manager/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contractualisation{% endblock %}

{% block stylesheets %}

    <!-- Additional CSS links-->
    <link rel="stylesheet" href="{{ asset('build/organization_show.css') }}">
{% endblock %}

{% block header %}
    <!-- PASSED W3C VALIDATOR https://validator.w3.org/ -->
    <!-- Zero intern console warning -->

    <!-- Navbar in views/base.html.twig -->
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row boxing-canvas mt-50">
            <div class="col-md-12 col-sm-12 col-xs-12 text-center">

                <!-- Display different color regarding if a company or structure is logged in -->
                <i class="fas fa-briefcase text-center degradeblue" style="font-size: 50px"></i>
                <h5 class="degradeblue">Contractualisation</h5>

                <!-- Creating a responsive table -->
                <div class="table-responsive">
                    <table id="table-manager" class="table table-striped text-center">
                        <!-- Table head -->
                        <thead>
                        <tr>
                            <th>Nom de votre structure</th>
                            <th>Nom de l'offre</th>
                            <th>Montant demandé</th>
                            <th>Avant le</th>
                            <th>Nom du partenaire</th>
                            <th>Statut</th>
                        </tr>
                        </thead>
                        <!-- End of table head -->

                        <!-- Starting listing the offers -->
                        <tbody>
                        {% for offer in offers %}
                            <tr>
                                <td>{{ offer.activity.organizationActivities.name }}</td>
                                <td>{{ offer.name }}</td>
                                <td>{{ offer.amount }}</td>
                                <td>{{ offer.date|date('d M Y') }}</td>
                                {% if offer.organization %}
                                    <td>{{  offer.organization.name }}</td>
                                {% else %}
                                    <td>Aucune marque liée</td>
                                {% endif %}

                                <!-- Buttons changing contracts' status start -->
                                <td>
                                    {% if offer.status == 0 %}
                                        <button class="button button text-center">Aucun partenaire</button>
                                    {% elseif offer.status == 1 %}
                                        <button class="button button-yellow text-center">Négociation</button>
                                    {% elseif offer.status == 2 %}
                                        <button class="button button-green text-center">Validation</button>
                                    {% elseif offer.status == 3 %}
                                        <button class="button button-blue text-center">Paiement</button>
                                    {% elseif offer.status == 4 %}
                                        <button class="button button-purple text-center">Expiré</button>
                                    {% elseif offer.status == 5 %}
                                        <button class="button button-red text-center">Refusé</button>
                                    {% endif %}
                                </td>
                                <!-- Ending buttons changing contracts' status -->
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/table-manager.js') }}"></script>
{% endblock %}