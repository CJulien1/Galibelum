<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <!-- maximum-scale=1.0 is now deprecated -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Wild Code School">
    <meta name="description" content= "Galibelum est une plateforme web offrant des services pour l'eSport">
    <meta name="keywords" content="Galibelum, eSport, Lille">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <title>Galibelum - {% block title %}{% endblock %}</title>

    <!-- CSS Webpack Vendor including Bootstrap and so on -->
    <link rel="stylesheet" href="{{ asset('build/vendor.css') }}">
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    <link rel="stylesheet" href="{{ asset('build/admin.css') }}">
    {% block stylesheets %}
    {% endblock %}

    <!-- Favicons -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
</head>
<body>
<header>
    {% block header %}
        <!-- Navbar starts -->
        <nav class="navbar navbar-inverse navbar-fixed-top hidden-lg">
            <div class="container">
                <div class="navbar-header navbar-brand">
                    <div class="btn-group">
                        <a href="#menu-toggle" class="btn-menu btn-primary active" id="menu-toggle">
                            <i class="navbar-toggle collapsed" data-toggle="collapse" role="contentinfo"
                               data-target="#navbar" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- End navbar -->

        <div id="wrapper">
            <div class="container">
                <!-- Sidebar starts -->
                <div id="sidebar-wrapper">
                    <div class="sidebar-nav">
                    <!-- Landing page for ROLE_SUPER_ADMIN and ROLE_MANAGER -->
                        <a href="{{ path('manager_contract_list') }}" class="navbar-brand">
                            <img class="logo-galibelum-admin" src="{{ asset('build/images/logo_galibelum.png') }}" alt="Logo Galibelum">
                        </a>
                    <!-- End landing page -->
                    </div>

                    <ul class="sidebar-nav">
                        <li class="sidebar-brand">
                            <br>
                        </li>

                        <li>
                            <a href="{{ path('manager_organization_list') }}"><span class="glyphicon glyphicon-pencil"
                              aria-hidden="true"></span> Voir les organisations</a>
                        </li>
                        <li>
                            <a href="{{ path('manager_contract_list') }}"><span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                Gérer les contrats</a>
                        </li>

                        <!--Only display the dropdown menu if logged in as ROLE_SUPER_ADMIN -->
                        {% if app.user.hasRole('ROLE_SUPER_ADMIN') %}
                            <!-- Dropdown menu starts -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true">
                                        </span> Accounts managers <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('admin_manager_new') }}">
                                            <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                                            Créer un compte</a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('admin_manager_list') }}"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                                            Gestion des comptes</a>
                                    </li>
                                </ul>
                            </li>
                            <!-- End condition -->
                        {% endif %}
                        <!-- End dropdown menu -->

                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                                Se déconnecter</a>
                        </li>
                    </ul>
                </div>
                <!-- End sidebar -->
            </div>
        </div>
    {% endblock %}
</header>

<div id="page-content-wrapper">
    {% block body %}{% endblock %}
</div>

<footer>
    {% block footer %}
    {% endblock %}
</footer>
<!-- JS Webpack's vendor including Bootstrap.js and JQuery.js shared entry -->
<script src="{{ asset('build/manifest.js') }}"></script>
<script src="{{ asset('build/vendor.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>