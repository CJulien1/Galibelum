{# app/Resources/views/activity/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/admin.css') }}">
{% endblock %}

{% block header %}
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#menu-toggle" id="menu-toggle"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Accueil</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Messages</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> Se déconnecter</a></li>
                </ul>
                <form class="navbar-form navbar-right" action="#" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Rechercher..." id="query" name="search" value="">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div class="container-fluid">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <br>
                    </li>
                    <li class="sidebar-brand">
                        <a href="#" class="navbar-brand">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Votre profil
                        </a>
                    </li>
                    <li>
                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                Gérer les accounts managers
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="#">Créer un account manager</a></li>
                                <li><a href="#">Supprimer un account manager</a></li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="#"><span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span> Organisations</a>
                    </li>
                    <li>
                        <a href="#"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> Contrats</a>
                    </li>
                </ul>
            </div>

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <br>
                            <h2>Bienvenue sur votre compte</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            {% for user in users %}
                                {{ user.firstName }}
                                {{ user.lastName }}
                                {{ user.email }}
                                <a href="{{ path('admin_delete', { 'id': user.id }) }}">delete</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        function is_jquery_here(){
        setTimeout(function(){
        if(window.jQuery){
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        } else {
        is_jquery_here();
        }
        }, 300);
        }
        is_jquery_here();
    </script>
{% endblock %}