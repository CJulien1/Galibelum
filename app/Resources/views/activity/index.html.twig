{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activities list</h1>

    {% for flash_message in app.session.flashBag.get('warning') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.name }}</td>
                <td>{{ activity.type }}</td>
                <td>{{ activity.date }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('activity_show', { 'id': activity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('activity_edit', { 'id': activity.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('offer_new', { 'id': activity.id }) }}">Cr√©er une Offre</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activity_new') }}">Create a new activity</a>
        </li>
    </ul>
{% endblock %}
